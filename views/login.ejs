<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Log In!</h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/login" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="username"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="password" name="password"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block">Login</button>
                </div>
            </form>
        <div style="width:30%; margin:30px auto;">
    </div>
</div>

